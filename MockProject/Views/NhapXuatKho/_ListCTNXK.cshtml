@using MockProject.DataBase
@using MockProject.Common
@model List<MockProject.DataBase.WAREHOUSETRANSACTION_DETAIL>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="viewProducts">
        @foreach (var item in Model)
        {
            <tr>

                <td style="width: 50%">
                    <input type="hidden" name="txtIdDetail" value="@item.WarehouseTransaction_ID" />
                    <select class="select2 form-control txtProduct" style="width: 100%" required="" name="txtProductIdRow">
                        <option selected="" value="@item.Product_ID">@item.PRODUCT.ProductName</option>
                    </select>
                </td>

                <td style="width: 20%"><input type="number" class="form-control" style="width:200px" value="@item.Quantity" required="" name="txtQuantityRow" /></td>

                <td style="width: 30%"><input type="text" class="form-control" value="@(item.Amount == null ? "" : item.Amount.ToString())" name="txtPriceRow" /></td>
                
                <td style="width: 5%"><a onclick="removeRowProducts(this)"><i style="color: red" class="fa fa-close"></i></a></td>
            </tr>
        }
    </tbody>
</table>

