@using MockProject.DataBase
@model MockProject.DataBase.NHANVIEN
@{
    ViewBag.Title = "ListPermission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading m-b-md">

    <div class="col-lg-12 m-t-md">
        <div class="col-md-6">
            <div class="profile-image">
                <a href="@Url.Action("ShowUpdateImage")">
                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <img src="~/Content/UserImage/@Model.HinhAnh" class="img-circle circle-border m-b-md" alt="profile" />

                    }
                    else
                    {
                        <img src="~/Content/Upload/noimage.png" class="img-circle circle-border m-b-md" alt="profile" />
                    }
                </a>
            </div>
            <div class="profile-info">
                <div class="">
                    <div>
                        <h2 class="no-margins">
                            @Model.TenNV
                        </h2>


                        <small>
                            Chức vụ: @Model.ChucVu
                        </small>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h5>Danh sách quyền</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-down"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">
        <div class="row">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="m-b-md">
                        @Html.Partial("_PermissionTree", Model.NHANVIEN_QUYEN.Select(x => (Permission)x.QuyenID).ToList())
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <input onclick="btnSubmit()" type="button" value="Lưu" class="btn btn-primary" />
                            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-white" })
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>