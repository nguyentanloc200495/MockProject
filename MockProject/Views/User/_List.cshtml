@using MockProject.Common
@using PagedList.Mvc;
@model MockProject.Services.PagedSearchList<MockProject.DataBase.NHANVIEN>
<div class="table-responsive">
    <div class="m-t-lg">
        <h5 class="m-t-lg">Tìm thấy @Model.TotalItemCount</h5>
    </div>
    <table class="table table-hover table-bordered table-striped">
        <tr>
            <th>#</th>
           
            <th>
                Tên nhân viên
            </th>
            <th>
                Tài khoản
            </th>
            <th>
                Email
            </th>
            <th>
                Chức vụ
            </th>
            <th>
                Tình trạng
            </th>
        

        </tr>
        @{ int index = Model.PageSize * (Model.PageNumber - 1) + 1; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(index++)
                </td>
              
                <td>
                   @item.TenNV
                    
                </td>
                <td>
                    @item.TaiKhoan
                    <a href="@Url.Action("Edit",new {id = item.ID})">@item.TaiKhoan</a>
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.ChucVu
                </td>
                <td>
                    @item.TrangThai
                </td>
              


            </tr>
        }
    </table>
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page =>
{
    Model.SearchModel.PageIndex = page;
    return Url.Action("List", Model.SearchModel);
},
        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxCommonOption() { HttpMethod = "POST", UpdateTargetId = "content" }))
</div>
