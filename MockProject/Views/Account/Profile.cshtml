
@model MockProject.DataBase.NHANVIEN

@{
    ViewBag.Title = "Thông tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading m-b-md">

    <div class="col-lg-12 m-t-md">
        <div class="col-md-6">
            <div class="profile-image">
                <a href="@Url.Action("ShowUpdateImage")">
                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <img src="~/Content/UserImage/@Model.HinhAnh" class="img-circle circle-border m-b-md" alt="profile" />

                    }
                    else
                    {
                        <img src="~/Content/Upload/noimage.png" class="img-circle circle-border m-b-md" alt="profile" />
                    }
                </a>
            </div>
            <div class="profile-info">
                <div class="">
                    <div>
                        <h2 class="no-margins">
                            @Model.TenNV
                        </h2>
                        
                       
                        <small>
                            Chức vụ: @Model.ChucVu
                        </small>
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Thông tin</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.ID)

                            <div class="form-group">
                                @Html.Label("Tài khoản", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.TaiKhoan)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Họ và tên", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.TenNV)</p>
                                </div>
                            </div>
                            @*<div class="form-group">
                                    @Html.LabelFor(model => model.DayOfBirth, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <p class="form-control-static">@Html.DisplayFor(model => model.HR_Emp.DOBStr)</p>
                                    </div>
                                </div>*@
                            <div class="form-group">
                                @Html.Label("Chức vụ", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.ChucVu)</p>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Số điện thoại", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.SoDT)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Hình ảnh</label>
                                <div class="col-md-10">
                                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                                    {
                                        @*<img id="blah" src="@Url.Content(Model.ImagePath)" alt="@Model.Fullname" style="max-width: 100px; max-height: 100px" />*@
                                        <img id="blah" src="~/Content/UserImage/@Model.HinhAnh" alt="@Model.TenNV" style="max-width: 100px; max-height: 100px" />

                                    }
                                    else
                                    {
                                        <img id="blah" src="~/Content/Upload/noimage.png" alt="@Model.TenNV" style="max-width: 100px; max-height: 100px" />
                                    }
                                    @*<img src="@Url.Content(Model.ImagePath)" alt="@Model.Fullname" style="max-width: 150px; max-height: 150px"/>*@
                                    @Html.ActionLink("Đổi Hình Ảnh", "ShowUpdateImage", new { id = Model.ID }, new { @class = "btn btn-primary btn-xs" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">

                                    @Html.ActionLink("Đổi mật khẩu", "ResetPassword", "Account", null, new { @class = "btn btn-primary" })
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>