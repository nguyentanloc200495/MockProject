@using MockProject.Common
@model MockProject.Models.CTKhoSearchModel
<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "CT Kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <ol class="breadcrumb">
            <li class="active">
                <strong>Tình trạng hàng hóa trong kho</strong>
            </li>
        </ol>
        @*<a class="btn btn-primary m-t-sm" href=@Url.Action("Create", "Kho")> Tạo mới</a>*@

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInUp">

    <div class="ibox">
        <div class="ibox-title">
            <h5>Tìm kiếm</h5>
        </div>
        <div class="ibox-content">
            @using (Ajax.BeginForm("List", "CTKho", new AjaxOptions() { UpdateTargetId = "content" }))
            {
                <div class="row form-horizontal">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Tên Kho</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.KhoID, null, "-----Tất cả--------", new { @class = "form-control select2" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Sản phẩm</label>
                                <div class="col-md-8">

                                    @Html.DropDownListFor(x => x.SanPhamID, null, "--------", new { @class = "form-control select2" })

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <button class="btn btn-primary" type="submit" id="submit">Tìm</button>
                        </div>
                    </div>
                </div>
            }

            <div id="content" class="loading">

            </div>
        </div>
    </div>
</div>
